.loadScreen
  position absolute
  top 0
  width 100%
  height 100%
  // background-color #D2DDF5
  background-color rgba(0, 0, 0, 0)
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out
  z-index 1

.load
  margin 0 0 30px 0
  padding 0
  color #fff
  font-family NeueHaas
  user-select none

.progressBar
  display flex
  justify-content center
  width 33%
  background-color rgba(255, 255, 255, 0.25)

.progress
  width 0px
  height 2px
  background-color #fff

.loadScreen button
  font-family Romie
  font-size 32px
  position absolute
  bottom 96px
  background none
  border none
  border-radius none
  cursor pointer
  outline none
  color #fff
  &::after
    transition 0.32s ease transform
    content ''
    width 100%
    border-bottom 1px solid #fff
    position absolute
    top 40px
    left 0px
  &:hover::after
    transform scaleX(0)
