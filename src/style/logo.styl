.logo
  display flex
  justify-content space-between
  width 100%
  box-sizing border-box
  font-family Romie
  color #fff
  font-weight 400
  font-size 24px
  line-height 28.4px
  position absolute
  top 42px
  padding 0 48px
  z-index 10
  user-select none
  pointer-events none
  transition 1s ease opacity
  opacity 1
  text-shadow: 0px 0px 5px rgba(0,0,0,0.15)

.about
  pointer-events auto
  cursor pointer

.hidden
  display none
  opacity 0