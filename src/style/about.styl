.aboutContent
  z-index 9
  font-family NeueHaas, serif
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  box-sizing border-box
  padding-top 31.2vh
  padding-left 12.5vw
  background-color #27282C
  opacity 0
  pointer-events none

.explanation
  width 720px
  font-size 24px
  line-height 34px
  color #fff
  margin-bottom 8.8vh
  transform-origin -10% 50%
  & p
    margin 0
    &:first-child
      margin-bottom 34px

.credit
  font-size 18px
  line-height 28px
  color rgba(255, 255, 255, 0.4)
  transform-origin -10% 50%
  & p
    margin 0

.closeAbout
  z-index 10
  font-family NeueHaas
  font-size 18px
  line-height 28px
  color #fff
  position absolute
  bottom 48px
  left 48px
  cursor pointer
  pointer-events auto
