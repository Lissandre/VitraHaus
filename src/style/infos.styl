.infos
  height 100vh
  width 40%
  position absolute
  top 0
  right 0
  margin-right 5%
  z-index 2
  display flex
  justify-content flex-end
  align-items center
  user-select none
  pointer-events none

.arrow
  height 1px
  width 150px
  margin-right 50px
  background linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%)

h2.title
  font-family NeueHaas
  font-weight 500
  font-size 24px
  line-height 28px
  color #fff

p.description
  width 340px
  font-family NeueHaas
  font-weight 400
  font-size 18px
  line-height 28px
  color #fff

a.action
  font-family NeueHaas
  font-weight 400
  font-size 18px
  line-height 28px
  text-decoration none
  color #fff
  padding-bottom 2px
  border-bottom 1px solid #fff
  pointer-events auto
