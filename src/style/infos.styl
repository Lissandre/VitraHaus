.infos
  transform-origin -10% 50%
  height 100vh
  width 40%
  position absolute
  top 0
  right 0
  margin-right 5%
  z-index 2
  display flex
  justify-content flex-end
  align-items center
  user-select none
  pointer-events none
  opacity 1
  transition 1s ease opacity

.arrow
  height 1px
  width 150px
  margin-right 50px
  background linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%)

h2.title
  width 340px
  font-family NeueHaas
  font-weight 500
  font-size 24px
  line-height 28px
  color #fff

p.description
  width 340px
  font-family NeueHaas
  font-weight 400
  font-size 18px
  line-height 28px
  color #fff

a.action
  font-family NeueHaas
  font-weight 400
  font-size 18px
  line-height 28px
  text-decoration none
  color #fff
  padding-bottom 2px
  border-bottom 1px solid #fff
  pointer-events auto

.hidden
  opacity 0

h1.name
  transform-origin -10% 50%
  z-index 2
  margin 0
  position absolute
  top 50%
  left 8%
  transform translateY(-50%)
  width 340px
  font-family NeueHaas
  font-weight 400
  font-size 48px
  line-height 58px
  color #fff
  pointer-events none